    <inductionLoop id="sensor_E1_300m" lane="E1_0" pos="200" freq="1" file="output/sensor_E1_300m.xml"/>
    <inductionLoop id="sensor_E1_200m" lane="E1_0" pos="300" freq="1" file="output/sensor_E1_200m.xml"/>
    <inductionLoop id="sensor_E1_100m" lane="E1_0" pos="400" freq="1" file="output/sensor_E1_100m.xml"/>
    <inductionLoop id="sensor_E1_stop" lane="E1_0" pos="495" freq="1" file="output/sensor_E1_stop.xml"/>
    
    <!-- E2 Approach Sensors -->
