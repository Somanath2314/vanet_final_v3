<?xml version="1.0" encoding="UTF-8"?>
<additionalFile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/additional_file.xsd">

    <!-- Traffic Light Programs -->
    <tlLogic id="J2" type="static" programID="adaptive" offset="0">
        <phase duration="30" state="GGrr"/>
        <phase duration="5"  state="yyrr"/>
        <phase duration="30" state="rrGG"/>
        <phase duration="5"  state="rryy"/>
    </tlLogic>
    
    <tlLogic id="J3" type="static" programID="adaptive" offset="0">
        <phase duration="30" state="GGrr"/>
        <phase duration="5"  state="yyrr"/>
        <phase duration="30" state="rrGG"/>
        <phase duration="5"  state="rryy"/>
    </tlLogic>

    <!-- Sensor Detectors (every 100m over 0.5km approach) -->
    
