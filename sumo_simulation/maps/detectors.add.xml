    <inductionLoop id="sensor_E2_stop" lane="E2_0" pos="495" freq="1" file="output/sensor_E2_stop.xml"/>
    
    <!-- E5 Approach Sensors (North-South) -->
    <inductionLoop id="sensor_E5_500m" lane="E5_0" pos="0" freq="1" file="output/sensor_E5_500m.xml"/>
    <inductionLoop id="sensor_E5_400m" lane="E5_0" pos="100" freq="1" file="output/sensor_E5_400m.xml"/>
    <inductionLoop id="sensor_E5_300m" lane="E5_0" pos="200" freq="1" file="output/sensor_E5_300m.xml"/>
    <inductionLoop id="sensor_E5_200m" lane="E5_0" pos="300" freq="1" file="output/sensor_E5_200m.xml"/>
