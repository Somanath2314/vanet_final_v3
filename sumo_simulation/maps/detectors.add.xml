    <!-- Lane Area Detectors for Queue Length -->
    <laneAreaDetector id="queue_E1" lane="E1_0" pos="400" endPos="500" freq="1" file="output/queue_E1.xml"/>
    <laneAreaDetector id="queue_E2" lane="E2_0" pos="400" endPos="500" freq="1" file="output/queue_E2.xml"/>
